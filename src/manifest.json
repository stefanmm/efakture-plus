{
	"name": "eFakture Plus",
	"description": "Dodatne opcije za eFakture. Nezvaniƒçan dodatak.",
	"version": "1.0.2",

	"author": "Stefan Marjanov",
	
	"browser_specific_settings": {
		"gecko": {
			"id": "efaktureplus@sn.rs",
			"strict_min_version": "109.0",
			"update_url": "https://www.saznajnovo.com/addons/efaktureplus/updates.json"
		}
	},
	
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false,
		"browser_style": false
	},

	"permissions": [
		"storage"
	],
	"host_permissions": [
		"https://*.efaktura.mfin.gov.rs/*",
		"https://*.demoefaktura.mfin.gov.rs/*"
	],
	"content_scripts": [ 
	{
		"js": [ "jquery.min.js", "content.js" ],
		"matches": [ "https://*.efaktura.mfin.gov.rs/*", "https://*.demoefaktura.mfin.gov.rs/*"],
		"run_at": "document_start"
	},
	{
		"css": ["style.css"],
		"matches": [ "https://*.efaktura.mfin.gov.rs/*", "https://*.demoefaktura.mfin.gov.rs/*"],
		"run_at": "document_start"
	}
	],

	"action": {
		"default_title": "eFakture Plus",
		"default_icon": {
			"16": "icon16.png",
			"32": "icon32.png",
			"48": "icon48.png",
			"128": "icon128.png"
		},
		"default_popup": "options.html"
	},
	"icons": {
	   "16": "icon16.png",
	   "32": "icon32.png",
	   "48": "icon48.png",
	   "128": "icon128.png"
	},
	"manifest_version": 3
}